<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="100dp"
    android:layout_width="fill_parent"
    android:id="@+id/new_variable_entered"
    android:background="#CCCCCC">

    <TextView
        android:layout_width="wrap_content"
        android:gravity="bottom"
        android:layout_marginTop="5dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="DB"
        android:id="@+id/var_type" />
    <EditText
        android:layout_width="25dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:gravity="bottom"
        android:inputType="number"
        android:layout_toRightOf="@id/var_type"
        android:layout_marginLeft="5dp"
        android:id="@+id/dbnumber"
        />
    <Spinner
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:gravity="bottom"
        android:layout_toRightOf="@id/dbnumber"
        android:layout_marginLeft="5dp"
        android:entries="@array/dbtype"
        android:id="@+id/spinnerdb"
        />
    <EditText
        android:layout_width="25dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:gravity="bottom"
        android:layout_toRightOf="@id/spinnerdb"
        android:inputType="number"
        android:layout_marginLeft="5dp"
        android:id="@+id/bytedbx"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:gravity="bottom"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/bytedbx"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="."
        android:id="@+id/dot" />
    <EditText
        android:layout_width="25dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:gravity="bottom"
        android:layout_toRightOf="@id/dot"
        android:inputType="number"
        android:layout_marginLeft="5dp"
        android:id="@+id/bitdbx"/>
    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/delete"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:gravity="bottom"
        android:clickable="true"
        android:layout_alignParentRight="true"
        android:id="@+id/deletebut"/>
    <TextView
        android:layout_marginTop="55dp"
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
        android:layout_height="40dp"
        android:textSize="20sp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:id="@+id/tvvalue"
        android:text="Value : "
        android:layout_alignParentBottom="false" />

    <EditText
        android:layout_marginTop="55dp"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/tvvalue"
        android:gravity="bottom"
        android:inputType="number"
        android:id="@+id/value_readwrite"/>

    <ImageView
        android:layout_marginTop="55dp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/force"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:id="@+id/forcebut"/>
    <ImageView
        android:layout_marginTop="55dp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/refresh"
        android:layout_toLeftOf="@+id/forcebut"
        android:layout_marginRight="10dp"
        android:clickable="true"
        android:id="@+id/refreshbut"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginTop="98dp"
        android:background="#4b4b4d"></LinearLayout>


</RelativeLayout>