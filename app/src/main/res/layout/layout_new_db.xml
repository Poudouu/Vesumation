<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="100dp"
    android:layout_width="fill_parent"
    android:id="@+id/new_variable_entered"
    android:background="@drawable/new_data_line_background">

    <TextView
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="DB"
        android:id="@+id/var_type" />

    <EditText
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:imeOptions="actionDone"
        android:textSize="20sp"
        android:layout_marginTop="12dp"
        android:inputType="number"
        android:layout_toRightOf="@id/var_type"
        android:layout_marginLeft="2dp"
        android:id="@+id/dbnumber"
        />

    <Spinner
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:gravity="bottom"
        android:layout_toRightOf="@id/dbnumber"
        android:layout_marginLeft="2dp"
        android:entries="@array/dbtype"
        android:id="@+id/spinnerdb"
        />
    <EditText
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:imeOptions="actionDone"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:gravity="bottom"
        android:layout_toRightOf="@id/spinnerdb"
        android:inputType="number"
        android:layout_marginLeft="5dp"
        android:id="@+id/bytedbx"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        android:gravity="bottom"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@id/bytedbx"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="."
        android:id="@+id/dot" />
    <EditText
        android:layout_width="30dp"
        android:maxLength="1"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:imeOptions="actionDone"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:gravity="bottom"
        android:layout_toRightOf="@id/dot"
        android:inputType="number"
        android:layout_marginLeft="2dp"
        android:id="@+id/bitdbx"/>
    <ImageView
        android:background="@drawable/button_bin"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/delete"
        android:layout_alignParentTop="true"
        android:layout_marginTop="55dp"
        android:layout_marginRight="5dp"
        android:gravity="bottom"
        android:clickable="true"
        android:layout_alignParentRight="true"
        android:id="@+id/deletebut"/>
    <ImageView
        android:background="@drawable/register_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="55dp"
        android:id="@+id/confirmlayout"
        android:layout_toLeftOf="@id/deletebut"
        android:layout_marginRight="5dp"
        android:clickable="true"
        android:src="@drawable/confirm" />

    <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:layout_marginTop="99dp"
    android:background="#000000"></LinearLayout>


</RelativeLayout>