<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="50dp"
    android:layout_width="fill_parent"
    android:id="@+id/new_variable_entered"
    android:background="#CCCCCC">

    <TextView
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="DB"
        android:id="@+id/var_type" />
    <EditText
        android:layout_width="25dp"
        android:layout_height="40dp"
        android:imeOptions="actionDone"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:gravity="bottom"
        android:inputType="number"
        android:layout_toRightOf="@id/var_type"
        android:layout_marginLeft="5dp"
        android:id="@+id/dbnumber"
        />
    <Spinner
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:gravity="bottom"
        android:layout_toRightOf="@id/dbnumber"
        android:layout_marginLeft="5dp"
        android:entries="@array/dbtype"
        android:id="@+id/spinnerdb"
        />
    <EditText
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:imeOptions="actionDone"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:gravity="bottom"
        android:layout_toRightOf="@id/spinnerdb"
        android:inputType="number"
        android:layout_marginLeft="5dp"
        android:id="@+id/bytedbx"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:gravity="bottom"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/bytedbx"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="."
        android:id="@+id/dot" />
    <EditText
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:imeOptions="actionDone"
        android:layout_marginTop="5dp"
        android:gravity="bottom"
        android:layout_toRightOf="@id/dot"
        android:inputType="number"
        android:layout_marginLeft="5dp"
        android:id="@+id/bitdbx"/>
    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/delete"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:gravity="bottom"
        android:clickable="true"
        android:layout_alignParentRight="true"
        android:id="@+id/deletebut"/>
    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/confirmlayout"
        android:layout_alignBottom="@id/deletebut"
        android:layout_toLeftOf="@id/deletebut"
        android:layout_marginRight="15dp"
        android:clickable="true"
        android:src="@drawable/confirm" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginTop="48dp"
        android:background="#4b4b4d"></LinearLayout>


</RelativeLayout>